<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    
    <!-- Departments -->
    <servlet>
        <servlet-name>DepartmentView</servlet-name>
        <servlet-class>view.DepartmentView</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DepartmentView</servlet-name>
        <url-pattern>/Departments</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DepartmentAddView</servlet-name>
        <servlet-class>view.DepartmentAddView</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DepartmentAddView</servlet-name>
        <url-pattern>/Departments/Add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DepartmentModifyView</servlet-name>
        <servlet-class>view.DepartmentModifyView</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DepartmentModifyView</servlet-name>
        <url-pattern>/Departments/Update</url-pattern>
    </servlet-mapping>
    
    <!-- Department Employees -->
    <servlet>
        <servlet-name>DepartmentEmployeeView</servlet-name>
        <servlet-class>view.DepartmentEmployeeView</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DepartmentEmployeeView</servlet-name>
        <url-pattern>/DepartmentEmployees</url-pattern>
    </servlet-mapping>    
    
    <!-- Department Managers -->
    <servlet>
        <servlet-name>DepartmentManagerView</servlet-name>
        <servlet-class>view.DepartmentManagerView</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DepartmentManagerView</servlet-name>
        <url-pattern>/DepartmentManagers</url-pattern>
    </servlet-mapping>
    
    <!-- Employees -->
    <servlet>
        <servlet-name>EmployeeView</servlet-name>
        <servlet-class>view.EmployeeView</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeView</servlet-name>
        <url-pattern>/Employees</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EmployeeAddView</servlet-name>
        <servlet-class>view.EmployeeAddView</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeAddView</servlet-name>
        <url-pattern>/Employees/Add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EmployeeModifyView</servlet-name>
        <servlet-class>view.EmployeeModifyView</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeModifyView</servlet-name>
        <url-pattern>/Employees/Modify</url-pattern>
    </servlet-mapping>
    
    <!-- Salaries -->
    <servlet>
        <servlet-name>SalaryView</servlet-name>
        <servlet-class>view.SalaryView</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SalaryView</servlet-name>
        <url-pattern>/Salaries</url-pattern>
    </servlet-mapping>
    
    <!-- Titles -->
    <servlet>
        <servlet-name>TitleView</servlet-name>
        <servlet-class>view.TitleView</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TitleView</servlet-name>
        <url-pattern>/Titles</url-pattern>
    </servlet-mapping>
    
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/Employees</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
        
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
